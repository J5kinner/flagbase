{
  "compilerOptions": {
    "jsx": "react",
    "strictNullChecks": true,
    "target": "es5",
    "lib": ["es2015", "dom"],
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "examples"]
}
